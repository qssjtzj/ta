<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <display-name>open</display-name>
  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>
			classpath*:/spring-config.xml
			classpath*:/spring-config-others.xml
		</param-value>
  </context-param>
  <context-param>
    <param-name>spring.profiles.default</param-name>
    <param-value>production</param-value>
  </context-param>
  <listener>
    <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
  </listener>
  <servlet>
    <servlet-name>initServlet</servlet-name>
    <servlet-class>com.cyou.common.custom.InitialServlet</servlet-class>
    <load-on-startup>0</load-on-startup>
  </servlet>

  <servlet>
		<servlet-name>ValidateCodeServlet</servlet-name>
		<servlet-class>com.cyou.common.core.ValidateCodeServlet</servlet-class>
		<init-param>
		<param-name>width</param-name>
		<param-value>115</param-value>
		</init-param>
		<init-param>
		<param-name>height</param-name>
		<param-value>40</param-value>
		</init-param>
		<init-param>
		<param-name>codeCount</param-name>
		<param-value>5</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>ValidateCodeServlet</servlet-name>
		<url-pattern>/validateCodeServlet</url-pattern>
	</servlet-mapping>
	
  <servlet>
    <servlet-name>springServlet</servlet-name>
    <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    <init-param>
      <param-name>contextConfigLocation</param-name>
      <param-value>classpath:spring-mvc.xml</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>springServlet</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>

  <filter>
    <filter-name>encodingFilter</filter-name>
    <filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
    <init-param>
      <param-name>forceEncoding</param-name>
      <param-value>true</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>encodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
    <dispatcher>REQUEST</dispatcher>
    <dispatcher>FORWARD</dispatcher>
  </filter-mapping>
  
  <filter>
    <filter-name>openSessionInViewFilter</filter-name>
    <filter-class>org.springframework.orm.hibernate4.support.OpenSessionInViewFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>openSessionInViewFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  
  <filter>
    <filter-name>openSessionInViewFilterSlave</filter-name>
    <filter-class>org.springframework.orm.hibernate4.support.OpenSessionInViewFilter</filter-class>
    <init-param>      
            <param-name>sessionFactoryBeanName</param-name>
            <param-value>sessionFactorySlave</param-value>   
    </init-param>    
  </filter>
  <filter-mapping>
    <filter-name>openSessionInViewFilterSlave</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  
  <filter>
    <filter-name>rcecmainSessionFactoryFilter</filter-name>
    <filter-class>org.springframework.orm.hibernate4.support.OpenSessionInViewFilter</filter-class>
    <init-param>      
            <param-name>sessionFactoryBeanName</param-name>
            <param-value>rcecmainSessionFactory</param-value>   
    </init-param>    
  </filter>
  <filter-mapping>
    <filter-name>rcecmainSessionFactoryFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <filter>
    <filter-name>rcecrecordSessionFactoryFilter</filter-name>
    <filter-class>org.springframework.orm.hibernate4.support.OpenSessionInViewFilter</filter-class>
    <init-param>      
            <param-name>sessionFactoryBeanName</param-name>
            <param-value>rcecrecordSessionFactory</param-value>   
    </init-param>    
  </filter>
  <filter-mapping>
    <filter-name>rcecrecordSessionFactoryFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  
  <filter>
    <filter-name>flowerSessionFactoryFilter</filter-name>
    <filter-class>org.springframework.orm.hibernate4.support.OpenSessionInViewFilter</filter-class>
    <init-param>      
            <param-name>sessionFactoryBeanName</param-name>
            <param-value>flowerSessionFactory</param-value>   
    </init-param>    
  </filter>
  <filter-mapping>
    <filter-name>flowerSessionFactoryFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>  
  
  <filter>
    <filter-name>raidcallSessionFactoryFilter</filter-name>
    <filter-class>org.springframework.orm.hibernate4.support.OpenSessionInViewFilter</filter-class>
    <init-param>      
            <param-name>sessionFactoryBeanName</param-name>
            <param-value>raidcallSessionFactory</param-value>   
    </init-param>    
  </filter>
  <filter-mapping>
    <filter-name>raidcallSessionFactoryFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <filter>
    <filter-name>channelliveSessionFactoryFilterSlave</filter-name>
    <filter-class>org.springframework.orm.hibernate4.support.OpenSessionInViewFilter</filter-class>
    <init-param>      
            <param-name>sessionFactoryBeanName</param-name>
            <param-value>channelliveSessionFactorySlave</param-value>   
    </init-param>    
  </filter>
  <filter-mapping>
    <filter-name>channelliveSessionFactoryFilterSlave</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>  
  
 <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>*.css</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>*.json</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>*.gif</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>*.png</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>*.ico</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>*.jpg</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>*.js</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>*.htm</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>*.html</url-pattern>
  </servlet-mapping>
    <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>*.fla</url-pattern>
  </servlet-mapping>
    <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>*.swf</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>*.htc</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>*.xml</url-pattern>
  </servlet-mapping>

  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
  <session-config>
    <session-timeout>120</session-timeout>
  </session-config>
  
  	<error-page>
		<error-code>404</error-code>
		<location>/404.html</location>
	</error-page>
</web-app>